<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krislq.sliding"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:name="com.campusrecruit.app.AppContext"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.campusrecruit.activity.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.campusrecruit.activity.MainActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.RecommendActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.LoginDialogActivity"
            android:label="@string/title_activity"
            android:theme="@style/Theme.HalfTranslucent" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.UserInfoActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.UserSettingActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.RegisterActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.UserReplyActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.ProvinceActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
         <activity
            android:name="com.campusrecruit.activity.CompanyTypeActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
         <activity
            android:name="com.campusrecruit.activity.CompanyIndustryActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.BBSTopicListActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.TopicDetailActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.CommentPubActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.RecruitDetailActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.CareerTalkDetailActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.TopicPubActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.PreferenceActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.RecommendsActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.ScheduleActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.UserFavroateActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.DailyActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.PrivateMessageActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.campusrecruit.activity.PrivateMessageListActivity"
            android:icon="@drawable/ic_main"
            android:label="@string/title_activity_test" >
        </activity>

        <receiver android:name="com.campusrecruit.common.BroadCast" >
            <intent-filter>
                <action android:name="com.campusRecruit.action.NOTICE" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.campusrecruit.common.ScheduleAlarmBroadcastReceiver" >
            <intent-filter>
                <action android:name="com.campusRecruit.action.SCHEDULE" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.campusrecruit.common.ShutDownReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>
    </application>

</manifest>