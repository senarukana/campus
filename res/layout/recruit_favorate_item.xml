<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightwhite"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/recruit_favorate_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/recruit_favorate_created_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8月30日 "
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recruit_favorate_click_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="2dp" >

            <ImageView
                android:id="@+id/recruit_favorate_new_flag"
                android:layout_width="14.0dip"
                android:layout_height="14.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dip"
                android:src="@drawable/widget_today_icon"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/recruit_favorate_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="百度"
                android:textColor="#1E90FF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/recruit_favorate_cancel"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_background"
                android:text="取消收藏"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行业："
                android:textSize="15sp"
                 />

            <TextView
                android:id="@+id/recruit_favorate_company_industry"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="计算机、通信、电子"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recruit_favorate_company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="私企"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点："
                android:textSize="15sp"
                 />

            <TextView
                android:id="@+id/recruit_favorate_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="北京、上海、天津"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位："
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recruit_favorate_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件研发、硬件研发、算法、运维、产品、其它"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>