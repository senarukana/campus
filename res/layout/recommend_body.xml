<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="公司类型"
        android:textColor="#0483ba"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/recommend_industry_computer_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_industry_computer"
            android:tag="industry_1"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_industry_communication_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_industry_communication"
            android:tag="industry_2"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_industry_electronic_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_industry_electronic"
            android:tag="industry_3"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_industry_economic_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_industry_economy"
            android:tag="industry_4"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:text="公司性质"
        android:textColor="#0483ba"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/recommend_property_soe_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_property_soe"
            android:tag="property_1"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_property_private_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_property_private"
            android:tag="property_2"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_property_foreign_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_property_foreign"
            android:tag="property_3"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recommend_address_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="工作地点"
            android:textColor="#0483ba"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/recommend_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:paddingTop="5dp"
            android:src="@drawable/right" />

        <TextView
            android:id="@+id/selected_province_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/recommend_right_icon"
            android:text="请选择城市"
            android:textColor="#0483ba"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/selected_province_text_show_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightorange"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/recommend_notify_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="数据来源"
            android:textColor="#0483ba"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/recommend_source_dajie_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/recommend_source_dajie"
                android:tag="source_1"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/recommend_source_byr_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/recommend_source_byr"
                android:tag="source_2"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/recommend_source_shuimu_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/recommend_source_shuimu"
                android:tag="source_3"
                android:textOff=""
                android:textOn="" />
            
            <ToggleButton
                android:id="@+id/recommend_source_haitou_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/recommend_source_haitou"
                android:tag="source_4"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="大街网"
                android:textColor="#0483ba"
                android:textSize="12sp" />

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="北邮人"
                android:textColor="#0483ba"
                android:textSize="12sp" />

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="水木"
                android:textColor="#0483ba"
                android:textSize="12sp" />
            
            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="海投网"
                android:textColor="#0483ba"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="推送消息类型"
            android:textColor="#0483ba"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/recommend_type_careertalk_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/recommend_type_careertalk"
                android:tag="type_1"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/recommend_type_recruit_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/recommend_type_recruit"
                android:tag="type_2"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/recommend_type_message_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/recommend_type_message"
                android:tag="type_3"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/recommend_type_reply_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/recommend_type_reply"
                android:tag="type_4"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>