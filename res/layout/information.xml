            android:layout_marginLeft="25dp"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="姓名：XXX"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
