<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recruit_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recruit_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/recruit_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recruit_created_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="8月30日 "
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/recruit_original_url_layout"
                android:layout_width="120dp"
                android:gravity="right"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingTop="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据来源:"
                    android:textColor="@color/listitem_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/recruit_source_from"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/listitem_gray"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recruit_click_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/recruit_famous_flag"
                android:layout_width="14.0dip"
                android:layout_height="14.0dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/famous"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/recruit_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="百度"
                android:textColor="#1E90FF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="行业："
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recruit_company_industry"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="计算机、通信、电子"
                android:textSize="15sp" />

           <TextView
                android:id="@+id/recruit_company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="私企"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="地点："
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recruit_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="北京、上海、天津"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="职位："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recruit_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="软件研发、硬件研发、算法、运维、产品、其它"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>