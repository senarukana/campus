<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity1_bd_margin"
        android:layout_weight="0.01"
        android:background="@drawable/company_info"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/activity1_bd_margin"
            android:src="@drawable/pic1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="@dimen/activity1_bd_margin"
            android:src="@drawable/pic2" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginLeft="@dimen/activity1_bd_margin"
            android:layout_toRightOf="@+id/imageView4"
            android:text="公司全称"
            android:textSize="9sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/career_detail_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/textView1"
            android:text="TextView"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/career_detail_company_scale_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/career_detail_company_address"
            android:layout_below="@+id/career_detail_company_address"
            android:layout_marginTop="17dp"
            android:src="@drawable/pic3" />

        <ImageView
            android:id="@+id/career_detail_company_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/textView1"
            android:src="@drawable/pic4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/career_detail_company_scale_img"
            android:layout_toLeftOf="@+id/career_detail_company_name"
            android:text="公司规模"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/career_detail_company_name"
            android:text="TextView"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/career_detail_company_scale_img"
            android:layout_toLeftOf="@+id/career_detail_company_name"
            android:text="公司地址"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/career_detail_company_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/textView4"
            android:text="TextView"
            android:textSize="9sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity1_bd_margin"
        android:layout_weight="0.01"
        android:background="@drawable/company_info"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/activity1_bd_margin"
            android:src="@drawable/pic1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_marginLeft="54dp"
            android:layout_toRightOf="@+id/textView8"
            android:src="@drawable/pic6" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="收藏"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView7"
            android:layout_marginLeft="44dp"
            android:layout_toRightOf="@+id/textView7"
            android:src="@drawable/pic5" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="加入讨论组"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView8"
            android:layout_below="@+id/imageView8"
            android:layout_marginLeft="30dp"
            android:src="@drawable/pic5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_toRightOf="@+id/imageView9"
            android:text="加入日程"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView7"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="24dp"
            android:src="@drawable/tag1" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView6"
            android:layout_toLeftOf="@+id/imageView11"
            android:src="@drawable/tag2" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignTop="@+id/imageView10"
            android:layout_marginLeft="16dp"
            android:src="@drawable/tag3" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView9"
            android:layout_alignTop="@+id/imageView11"
            android:src="@drawable/tag4" />
    </RelativeLayout>

</LinearLayout>
