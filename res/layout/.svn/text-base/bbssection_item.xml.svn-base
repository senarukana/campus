<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recruit_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="10dp" >
            
        <ImageView
            android:id="@+id/bbssection_item_flag"
            android:layout_width="14.0dip"
            android:layout_height="14.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dip"
            android:src="@drawable/widget_today_icon"
            android:visibility="gone" />

            <TextView
                android:id="@+id/bbssection_company_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="百度"
                android:textColor="#1E90FF"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:padding="2dp"
                android:scaleType="fitEnd"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/item_joins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="2"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:src="@drawable/widget_comment_count_icon" />

            <TextView
                android:id="@+id/bbssection_item_topic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingBottom="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="行业："
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bbssection_company_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算机、通信、电子"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="企业性质："
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bbssection_company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="私企"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>