<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/user_infor_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/user_infor_face_show"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/user_infor_user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="changdou"
                android:textSize="12sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TableRow>
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="性别 :"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/user_infor_gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/widget_gender_man" />
            </TableRow>
            <TableRow >
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="在读学校 :"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_infor_school_text"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />
            </TableRow>
            <TableRow >
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="专业类别 :"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_infor_major_text"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />
            </TableRow>
            <TableRow >
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Email :"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_infor_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_infor_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/user_infor_face"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/user_infor_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="changdou"
                android:textSize="12sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TableRow>
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="性别 :"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/user_infor_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/widget_gender_man" />
            </TableRow>
            <TableRow >
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="在读学校 :"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/user_infor_school"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/hh1"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />
            </TableRow>
            <TableRow >
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="专业类别 :"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/user_infor_major"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />
            </TableRow>
            <TableRow >
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Email :"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/user_infor_email"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/recommend_body"/>
    </ScrollView>
    
</LinearLayout>