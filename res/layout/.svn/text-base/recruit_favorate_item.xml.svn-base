<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recruit_favorate_item_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/empty_data_msg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="亲，还没有收藏过校园招聘信息哦！"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recruit_favorate_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/recruit_favorate_company_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="百度"
                android:textColor="#1E90FF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/recruit_favorate_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="8月30日"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/recruit_favorate_cancel_detail"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="#1E90FF"
                android:text="取消收藏"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingBottom="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="行业："
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recruit_favorate_company_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算机、通信、电子"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="企业性质："
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recruit_favorate_company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="私企"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingBottom="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="地点："
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recruit_favorate_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="北京、上海、天津"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingBottom="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="职位："
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recruit_favorate_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件研发、硬件研发、算法、运维、产品、其它"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>