<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="公司类型"
        android:textColor="#0483ba"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/recommend_industry_computer_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_industry_computer"
            android:tag="industry_1"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_industry_communication_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_industry_communication"
            android:tag="industry_2"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_industry_electronic_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_industry_electronic"
            android:tag="industry_3"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="公司性质"
        android:textColor="#0483ba"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/recommend_property_soe_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_property_soe"
            android:tag="property_1"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_property_private_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_property_private"
            android:tag="property_2"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_property_foreign_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_property_foreign"
            android:tag="property_3"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="推送消息类型"
        android:textColor="#0483ba"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/recommend_type_careertalk_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_type_careertalk"
            android:tag="type_1"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_type_recruit_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_type_recruit"
            android:tag="type_2"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/recommend_type_discussion_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/recommend_type_discussion"
            android:tag="type_3"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recommend_address_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="公司地址"
            android:textColor="#0483ba"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/recommend_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:paddingTop="5dp"
            android:src="@drawable/right" />

        <TextView
            android:id="@+id/selected_province_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/recommend_right_icon"
            android:text="请选择城市"
            android:textColor="#0483ba"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>