<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity1_bd_margin"
    android:background="@drawable/company_info"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/careertalk_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/career_company_name"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="百度"
                android:textColor="#1E90FF"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/career_talk_date"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="8月30日"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="学校："
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/career_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京邮电大学"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="地点："
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/career_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新科研楼9楼913"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="时间："
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/career_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="15:00 - 16:30"
                android:textSize="13sp" />

            <!--
     			<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/career_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="2013-08-12"
                android:textSize="12sp" />
            -->
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/item_footer" />

</LinearLayout>