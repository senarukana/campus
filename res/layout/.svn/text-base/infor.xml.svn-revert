<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beg" >

        <ImageView
            android:id="@+id/user_infor_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/user_infor_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_infor_face"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="changdou900328@163.com"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_infor_user_name"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:layout_toLeftOf="@+id/user_infor_face"
            android:background="@drawable/hh"
            android:gravity="center"
            android:text="性别"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="30dp"
            android:background="@drawable/hh"
            android:gravity="center"
            android:text="在读学校"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="30dp"
            android:background="@drawable/hh"
            android:gravity="center"
            android:text="专业类别"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="30dp"
            android:background="@drawable/hh"
            android:gravity="center"
            android:textSize="12sp" 
            android:text="Email" />

        <ToggleButton
            android:id="@+id/user_infor_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView1"
            android:layout_toRightOf="@+id/textView3"
            android:gravity="center"
            android:textSize="12sp" 
            android:text="" />

        <EditText
            android:id="@+id/user_infor_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:background="@drawable/hh1"
            android:gravity="center"
            android:textSize="12sp" 
            android:text=""  />

        <EditText
            android:id="@+id/user_infor_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:background="@drawable/hh1"
            android:gravity="center"
            android:textSize="12sp" 
            android:text="" />

        <EditText
            android:id="@+id/user_infor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_infor_major"
            android:layout_alignTop="@+id/textView5"
            android:background="@drawable/hh1"
            android:gravity="center"
            android:textSize="12sp" 
            android:text=""  />

    </RelativeLayout>

</LinearLayout>
