<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@color/lightwhite"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip" >
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/private_message_list_item_userface"
            style="@style/user_face_image" />

        <LinearLayout
            android:id="@+id/private_message_list_item_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/private_message_list_item_new_flag"
                    android:layout_width="10.0dip"
                    android:layout_height="10.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dip"
                    android:src="@drawable/widget_today_icon"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/private_message_list_item_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:textColor="@color/listitem_blue"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/private_message_list_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/listitem_gray"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <com.campusrecruit.widget.LinkView
                android:id="@+id/comment_listitem_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dip"
                android:autoLink="web|email"
                android:textColor="@color/listitem_black"
                android:textColorLink="@color/listitem_blue"
                android:textSize="@dimen/text_size_17" />

        </LinearLayout>

        <ImageView
            android:id="@+id/private_message_list_item_userface_another"
            style="@style/user_face_image" />
    </LinearLayout>

</LinearLayout>