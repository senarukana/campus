<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightwhite"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip" >

    <ImageView
        android:id="@+id/comment_listitem_userface"
        style="@style/user_face_image" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comment_listitem_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:text="test"
                android:textColor="@color/listitem_blue"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/comment_listitem_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:includeFontPadding="false"
                android:text="1楼"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comment_listitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="3小时前"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_listitem_refers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/review_bg_blue"
            android:orientation="vertical" >
        </LinearLayout>

        <com.campusrecruit.widget.LinkView
            android:id="@+id/comment_listitem_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:autoLink="web|email"
            android:textColor="@color/listitem_black"
            android:textColorLink="@color/listitem_blue"
            android:textSize="@dimen/text_size_15" />
<!--             <TextView
            android:id="@+id/comment_listitem_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:textColor="@color/listitem_black"
            android:textColorLink="@color/listitem_blue"
            android:textSize="@dimen/text_size_15" /> -->
    </LinearLayout>

</LinearLayout>