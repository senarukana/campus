<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/company_info"
        android:paddingBottom="6dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/reply_by_other_user_face"
                    style="@style/user_face_image_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reply_by_other_click_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/reply_by_other_today_flag"
                        android:layout_width="14.0dip"
                        android:layout_height="14.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dip"
                        android:src="@drawable/widget_today_icon"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/reply_by_other_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="Lizhe"
                        android:textColor="@color/listitem_blue"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/reply_by_other_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="2012-9-23 3:00"
                        android:textColor="@color/lightorange"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_by_other_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <com.campusrecruit.widget.LinkView
                android:id="@+id/reply_by_other_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:autoLink="web|email"
                android:maxLines="4"
                android:text="12345156"
                android:textColor="@color/black"
                android:textColorLink="@color/listitem_blue"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/review_bg_gray"
                android:orientation="vertical" >

                <com.campusrecruit.widget.LinkView
                    android:id="@+id/reply_by_other_my_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:autoLink="web|email"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textColorLink="@color/listitem_blue"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>