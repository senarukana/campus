<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightwhite"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/recruit_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/bbssection_item_flag"
                android:layout_width="14.0dip"
                android:layout_height="14.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dip"
                android:src="@drawable/widget_today_icon"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/bbssection_famous_flag"
                android:layout_width="14.0dip"
                android:layout_height="14.0dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/famous"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/bbssection_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="百度"
                android:textColor="#1E90FF"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/bbssection_isjoined_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/star_background"
                android:scaleType="fitEnd"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/bbssection_item_joins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="20"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />

            <ImageView
                android:id="@+id/bbssection_item_topic_count_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/topic_count" />

            <TextView
                android:id="@+id/bbssection_item_topic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="行业："
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bbssection_company_industry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="计算机、通信、电子"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bbssection_company_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="私企"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>