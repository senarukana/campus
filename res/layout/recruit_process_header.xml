<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recruit_process_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="招聘流程"
        android:textColor="#1E90FF"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/recruit_process_net_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/net_exam0" />

        <ImageView
            android:id="@+id/recruit_process_net_to_wirte"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/recruit_processing" />

        <ImageView
            android:id="@+id/recruit_process_write_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:src="@drawable/write_exam0" />

        <ImageView
            android:id="@+id/recruit_process_write_to_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/recruit_processing" />

        <ImageView
            android:id="@+id/recruit_process_face_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:src="@drawable/face_exam0" />
    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/recruit_process_net_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="待定"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_10" />



        <TextView
            android:id="@+id/recruit_process_writen_exam_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="待定"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/recruit_process_face_exam_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="待定"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

</LinearLayout>